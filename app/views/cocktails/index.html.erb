
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/featured/?cocktail');">
  <div class="banner-content">
    <h1>Mister Cocktail</h1>
  </div>
</div>


<div class="container">

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-md-4">
        <!-- insert <div class="card"> -->
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('#');">
            <div class="card-category">Cocktails</div>
            <div class="card-description">
              <h2> <%= link_to cocktail.name, cocktail_path(cocktail)%> </h2>
              <p> Yummy!!</p>
            </div>
            <a class="card-link" href="#" ></a>
          </div>
      </div>
    <% end %>
  </div>
  <div id="btn_add_cocktail"> <%= link_to "add a new cocktail", new_cocktail_path, class: "btn btn-primary"  %> </div>
</div>







